<% if !logged_in? %> <h1>Log in</h1>
<div class="form-horizontal">

	<%= form_tag login_path, method: :post do %>
	<div class="row">
		<div class="col-sm-10">
			<div class="form-group col-xs-3">
				<%= label_tag :nickname %>
				<%= text_field_tag :nickname, nil,
				class: "form-control" %>
			</div>
		</div>
		<div class="col-sm-10">
			<div class="form-group col-xs-3">
				<%= label_tag :password %>
				<%= password_field_tag :password, nil,
				class: "form-control" %>
			</div>
		</div>
		<div class="col-sm-10">
			<%= submit_tag "Log In", class: "btn btn-primary" %>
		</div>

		<% end %>
		<div class="col-sm-10">
			<p>
				New user? <%= link_to "Sign up now!", register_path %>
			</p>
		</div>
	</div>
</div>
<% else %>
<script type="text/javascript">
	window.location="<%= users_path + '/' + current_user.id.to_s %>";</script>
<% end %>
</div">
