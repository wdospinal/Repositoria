<% if !logged_in? %>

	<h1>Log in</h1>
	
	<%= form_tag login_path, method: :post do %>
		<div class="form-group">
			<%= label_tag :nickname %>
			<%= text_field_tag :nickname, nil,
			class: "form-control" %>
		</div>
		<div class="form-group">
			<%= label_tag :password %>
			<%= password_field_tag :password, nil,
			class: "form-control" %>
		</div>
		<%= submit_tag "Log In", class: "btn btn-primary" %>
	<% end %>
	<p>
		New user? <%= link_to "Sign up now!", register_path %>
	</p>
<% else %>
	<script type="text/javascript">
            window.location="<%= users_path + '/' + current_user.id.to_s %>";
    </script>
<% end %>
